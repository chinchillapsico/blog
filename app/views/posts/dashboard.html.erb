<%= params %>
<form method="get" action="/posts/create">
    <div class="form-group">
        <label for="title">Título</label>
        <input name="titulo"type="title" class="form-control" id="titulo" placeholder="Ingresa el Título">
    </div>
    <div class="form-group">
        <label for="imagen">Link imagen</label>
        <input name="imagen" type="img" class="form-control" id="imagen" placeholder="Ingresa la Url de la imagen">
    </div>
    <div class="form-group">
        <label for="comment">Descripción</label>
        <textarea name="contenido" class="form-control"> </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Subir artículo</button>
</form>