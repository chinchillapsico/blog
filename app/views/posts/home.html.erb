<h1>Blog del Chinchillo</h1>
<% @posts.each do |post| %>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= post.titulo %> </h5>
            <p class="card-text"><%= post.contenido %> </p>
            <p class="card-text"><small class="text-muted"><%= post.fecha %> </p>
        </div>
        <%= image_tag 'post.imagen' %>
    </div>
<%end %>